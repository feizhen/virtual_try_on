# Application Configuration
NODE_ENV=production
PORT=3000
APP_NAME="Virtual Try-On"
APP_URL=http://your-server-ip:3000

# Database (will be overridden by docker-compose)
DATABASE_URL="postgresql://postgres:your_db_password@postgres:5432/vibe_db?schema=public"
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_NAME=vibe_db

# JWT Configuration - IMPORTANT: Change these in production!
JWT_SECRET=your_jwt_secret_here_generate_with_openssl
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_generate_with_openssl
JWT_REFRESH_EXPIRES_IN=30d

# Frontend URL - Update with your actual frontend URL
FRONTEND_URL=http://your-server-ip:5173

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key
GEMINI_API_BASE_URL=https://api.laozhang.ai
GEMINI_TIMEOUT=180

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# File Upload Configuration
UPLOAD_DIR=uploads

# Security
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
